 <?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.layout.BorderPane?>
        <?import javafx.scene.layout.GridPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tps.calculatorapp.CalculatorController"
            prefWidth="280.0" prefHeight="300.0">

<top>
    <TextField fx:id="display"
               editable="false"
               BorderPane.alignment="CENTER"
               prefHeight="50.0"/>
</top>

<center>
    <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <!-- riga 0 -->
        <Button text="7" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="8" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="9" GridPane.rowIndex="0" GridPane.columnIndex="2" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="/" GridPane.rowIndex="0" GridPane.columnIndex="3" onAction="#handleButton" prefWidth="60" prefHeight="60"/>

        <!-- riga 1 -->
        <Button text="4" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="5" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="6" GridPane.rowIndex="1" GridPane.columnIndex="2" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="*" GridPane.rowIndex="1" GridPane.columnIndex="3" onAction="#handleButton" prefWidth="60" prefHeight="60"/>

        <!-- riga 2 -->
        <Button text="1" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="2" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="3" GridPane.rowIndex="2" GridPane.columnIndex="2" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="-" GridPane.rowIndex="2" GridPane.columnIndex="3" onAction="#handleButton" prefWidth="60" prefHeight="60"/>

        <!-- riga 3 -->
        <Button text="0" GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="C" GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="=" GridPane.rowIndex="3" GridPane.columnIndex="2" onAction="#handleButton" prefWidth="60" prefHeight="60"/>
        <Button text="+" GridPane.rowIndex="3" GridPane.columnIndex="3" onAction="#handleButton" prefWidth="60" prefHeight="60"/>

    </GridPane>
</center>

</BorderPane>
